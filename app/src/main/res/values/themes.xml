<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdhithiMobiles" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/toolbar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AdhithiMobiles.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AdhithiMobiles.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="Theme.AdhithiMobiles.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="homeAfterCollapse">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="homeBeforeCollapse">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="Theme.AdhithiMobiles.navTheme">
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">#FF8E9C</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">#FFC0CD</item>

    </style>
</resources>