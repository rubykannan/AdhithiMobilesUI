<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBaseline_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:textSize="25sp"
        android:text="New Arrivals"
        android:textColor="@color/black"
        android:background="#eeecec"
        android:id="@+id/home_header"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/home_header"
        android:background="@color/divider"
        android:id="@+id/home_header_divider"
         />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="42dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/home_header_divider"
        app:layout_constraintEnd_toEndOf="@id/home_header_divider"
        app:layout_constraintStart_toStartOf="@id/home_header_divider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/home_content" />
</androidx.constraintlayout.widget.ConstraintLayout>